module Encoder24to5 (
    input  wire [23:0] control, // 24-bit control signals
    output reg  [4:0] sel       // 5-bit encoded selection
);
    integer i;
    always @(*) begin
        sel = 5'd0; // Default to 0
        for (i = 0; i < 24; i = i + 1) begin
            if (control[i]) begin
                sel = i[4:0]; // Assign the index as the encoded value
            end
        end
    end
endmodule
